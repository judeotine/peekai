{
  "manifest_version": 3,
  "name": "PeekAI",
  "version": "1.0.0",
  "description": "Get instant AI-powered answers to any text or question on any webpage",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PeekAI"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "trigger-peekai": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Trigger PeekAI answer window"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["modal.html", "modal.css", "modal.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
